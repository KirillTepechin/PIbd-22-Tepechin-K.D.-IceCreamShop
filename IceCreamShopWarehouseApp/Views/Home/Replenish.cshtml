@{
    ViewData["Title"] = "Replenish";
}

<div class="text-center">
    <h2 class="display-4">Пополение склада "@ViewBag.Warehouse.WarehouseName"</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Ингредиент:</div>
        <div class="col-8">
            <select id="ingredientId" name="ingredientId" class="form-control" asp-items="@(new SelectList(@ViewBag.Ingredients,"Id", "IngredientName"))"></select>
        </div>
    </div>
    <div class="row">
        <div class="col-4">Количество:</div>
        <div class="col-8"><input type="text" name="count" id="count" /></div>
    </div>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4"><input type="submit" value="Пополнить" class="btn btn-primary" /></div>
    </div>
</form>
